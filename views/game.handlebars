<div class="modal fade" id="sfwModal" tabindex="-1" role="dialog" aria-labelledby="sfwModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content-sfw"> 
            <div class="modal-header">
                <h5 class="modal-title" id="sfwModalLabel">These cards are safe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="sfw-modal-body">
            	Hit Next to Start!
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-target="sfwmodal" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="sfw-next">Next</button>
            </div>
        </div>
    </div>
</div>

